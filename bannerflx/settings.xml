<settings>
	<setting name="button_align" value="right" />  <!--Buttons Position. Values: left, center or right -->
	<setting name="delay" value="4000" />         <!--Images switching pause. Value: millisecond -->

    <!-- Default button styles -->
	<setting name="button_background" value="0xffffff" />  <!--Button background color. Value: HEX color from 0x000000 to 0xffffff (0xrrggbb)-->
