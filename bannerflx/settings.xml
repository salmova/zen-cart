	<setting name="button_border" value="0xffffff" />      <!--Button border color--> 
	<setting name="button_border_alpha" value="40" />      <!--Button border transparency-->
	<setting name="button_text_color" value="0x61a3c5" />  <!--Button text color--> 

    <!-- Active button styles -->
	<setting name="active_button_background" value="0xffffff" />  <!-- Active Button background color--> 
	<setting name="active_button_background_alpha" value="65" />  <!--Active Button background transparency-->                           
	<setting name="active_button_border" value="0xffffff" />      <!--Active Button border color-->                
	<setting name="active_button_border_alpha" value="75" />      <!--Active Button border transparency-->                               
	<setting name="active_button_text_color" value="0x0c9ee9" />  <!--Active Button text color-->                  
